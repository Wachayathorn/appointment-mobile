<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSpotDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:fontFamily">@font/modern</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#000000</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="android:background">@color/Spots</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/modern</item>
    </style>

    <style name="sw_notification">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#BDE9C1</item>
        <item name="android:fontFamily">@font/modern</item>
        <!-- inactive thumb color -->
        <!--<item name="colorSwitchThumbNormal">#000000</item>-->
        <!--&lt;!&ndash; inactive track color (30% transparency) &ndash;&gt;-->
        <!--<item name="android:colorForeground">#ACACAC</item>-->
    </style>
</resources>