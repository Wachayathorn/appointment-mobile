<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.078"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/imbox" />

    <ImageView
        android:id="@+id/imlogouser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/imbox"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/imbox"
        app:layout_constraintTop_toTopOf="@+id/imbox"
        app:layout_constraintWidth_percent="0.5"
        app:srcCompat="@drawable/imuser" />

    <EditText
        android:id="@+id/tbUsername"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:fontFamily="@font/modern"
        android:hint="ชื่อผู้ใช้"
        android:inputType="text"
        android:textColorHint="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imbox"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="@+id/imbox"
        app:layout_constraintTop_toBottomOf="@+id/imlogouser"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/tbPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:fontFamily="@font/modern"
        android:hint="รหัสผ่าน"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imbox"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="@+id/imbox"
        app:layout_constraintTop_toBottomOf="@+id/tbUsername"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/modern"
        android:text="Copyright © Computer Engineering 2019"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imbox"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="148dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="#71B88D"
        android:fontFamily="@font/modern"
        android:text="เข้าสู่ระบบ"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imbox"
        app:layout_constraintStart_toStartOf="@+id/imbox"
        app:layout_constraintTop_toBottomOf="@+id/tbPassword" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        app:srcCompat="@drawable/applogo" />

</android.support.constraint.ConstraintLayout>